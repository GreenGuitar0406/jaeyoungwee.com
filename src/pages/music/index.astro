---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '../../layouts/BaseLayout.astro';

const allAlbums = await getCollection('music');
// 날짜순 정렬
const albums = allAlbums.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="음악 | 위재영의 블로그" description="좋아하는 음악들">
  <div class="container">
    <header>
      <h1>Music Archive</h1>
      <p>내가 즐겨 듣는 앨범 기록</p>
    </header>

    <div class="topster-grid">
      {albums.map((album) => (
        <a href={`/music/${album.id}`} class="album-card">
          <Image 
            src={album.data.cover} 
            alt={`${album.data.artist} - ${album.data.title}`}
            width={600}
            height={600}
          />
          <div class="album-info">
            <span class="artist">{album.data.artist}</span>
            <span class="title">{album.data.title}</span>
            {album.data.rating && <span class="rating">{"★".repeat(album.data.rating)}</span>}
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  header {
    text-align: center;
    margin-bottom: 2rem;
  }

  header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  header p {
    color: rgb(var(--gray));
    font-size: 1.1rem;
  }

  .topster-grid {
    display: grid;
    /* 한 줄에 3개에서 5개까지 유동적으로 조절 */
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 15px;
    margin-top: 2rem;
  }

  .album-card {
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    background: #000;
    aspect-ratio: 1 / 1;
    transition: transform 0.2s ease;
    display: block;
    text-decoration: none;
  }

  .album-card :global(img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .album-card:hover {
    transform: scale(1.03);
    z-index: 10;
  }

  /* 앨범 정보 오버레이 효과 */
  .album-info {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 10px;
    opacity: 0;
    transition: opacity 0.2s ease;
    color: white;
  }

  .album-card:hover .album-info {
    opacity: 1;
  }

  .artist { font-size: 0.8rem; font-weight: bold; }
  .title { font-size: 0.7rem; margin-top: 4px; opacity: 0.9; }
  .rating { color: #ffd700; margin-top: 5px; font-size: 0.8rem; }
</style>